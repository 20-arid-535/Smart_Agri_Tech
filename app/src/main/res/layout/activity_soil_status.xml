<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoilStatus"
    android:background="@color/back"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="15dp"
            android:layout_marginStart="19dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/v69">
        </ImageView>
        <TextView
            android:layout_marginTop="13dp"
            android:layout_marginStart="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Soil Status"
            android:textSize="21sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
    <View
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#878282"></View>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/gg9">
<com.github.mikephil.charting.charts.LineChart
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/white"
    android:id="@+id/lc"></com.github.mikephil.charting.charts.LineChart>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25sp"
        android:text="Basic Rates"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22dp"></TextView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="135dp"
    android:layout_marginTop="30dp"
    android:orientation="horizontal"
    android:layout_marginStart="25dp">
<LinearLayout
    android:layout_width="105dp"
    android:layout_height="135dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    android:background="@drawable/box29"
    >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:textStyle="bold"></TextView>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="high"
        android:layout_marginStart="20dp"
        android:textSize="14dp"
        android:textColor="@color/white"
       ></TextView>
    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20%"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="17dp"
        android:textSize="23dp"
        ></TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:background="@drawable/box29"
        android:layout_marginEnd="5dp"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="high"
            android:layout_marginStart="20dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            ></TextView>
        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="17dp"
            android:textSize="23dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:background="@drawable/box29"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="high"
            android:layout_marginStart="20dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            ></TextView>
        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="17dp"
            android:textSize="23dp"
            ></TextView>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
</LinearLayout>