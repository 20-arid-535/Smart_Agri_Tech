<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoilFarm"
    android:background="@color/back"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="15dp"
            android:layout_marginStart="19dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/v69">
        </ImageView>
        <TextView
            android:layout_marginTop="13dp"
            android:layout_marginStart="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Soil Status"
            android:textSize="21sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
    <View
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#878282"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/c1"

                android:layout_width="155dp"
                android:layout_height="156dp"
                android:layout_marginStart="6dp"
                android:backgroundTint="#0A0B27"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <ImageView
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                   android:src="@drawable/drip"
                    android:scaleType="fitXY"
                    >

                </ImageView>
                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="DRIP CROP"
                    android:textSize="21sp"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c2"
                android:layout_width="155dp"
                android:layout_height="156dp"
                android:layout_marginStart="13dp"

                android:backgroundTint="#0A0B27"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/rain"
                    android:scaleType="fitXY"></ImageView>
                <TextView
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="RAINGUN"
                android:textSize="21sp"
                android:textStyle="bold"></TextView></androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/c3"
                android:layout_width="155dp"
                android:layout_height="156dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="6dp"
                android:backgroundTint="#0A0B27"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/orchard"
                    android:scaleType="fitXY"></ImageView>
                <TextView
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="ORCHARD"
                android:textSize="21sp"
                android:textStyle="bold"></TextView></androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>